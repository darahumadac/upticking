<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Upticking</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="col-sm-offset-1 col-sm-2">
                    <h3 class="site-title">@Html.ActionLink("Upticking", "Index", "Home")</h3>
                    @*<h3 class="site-title">@Html.ActionLink("Test", "Index", "Home")</h3>*@
                </div>
                <div class="col-sm-8">
                    <section id="login float-right">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </nav>
        </header>
        <div id="body" class="content-wrapper">
            @RenderSection("featured", required: false)
            <section class="main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="col-lg-12">
                <div id="links" class="col-sm-offset-4">
                    <span>@Html.ActionLink("About Us", "About", "Home")</span>|
                    <span>@Html.ActionLink("Contact Us", "About", "Home")</span>|
                    <span>@Html.ActionLink("Terms of Use", "About", "Home")</span>|
                    <span>@Html.ActionLink("Investors", "About", "Home")</span>
                    <br/>
                    <small class="col-sm-offset-2">Copyright 2016</small>
                </div>
                
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrapJS")
        @RenderSection("scripts", required: false)
    </body>
</html>
